@model MHC_Hospital_Redesign.Models.FaqDto
@{
    ViewBag.Title = "Edit";
}

<div class="back-link"><a href="/Faq/Details/@Model.FaqID">Go back</a></div>
<h2>Update Faq</h2>
<form action="/Faq/Update/@Model.FaqID" method="post">
    <div style="display:none;">

        <input type="text" name="FaqID" value="@Model.FaqID" />
    </div>
    <div>
        <label>Date Added:</label>
        <input type="text" name="DateAdded" value="@Model.DateAdded" />
    <div>
        <label>Question</label>
        <input type="text" name="FaqQuestions" value="@Model.FaqQuestions" />
    </div>
    <div>
        <label>Answer</label>
        <textarea  name="FaqAnswers" >@Model.FaqAnswers</textarea>
    </div>
    <div>
        <label>Faq Position:</label>
        <input type="number" name="FaqSort" value="@Model.FaqSort" />
    </div>
    
    <div>
        <input class="btn btn-primary" type="submit" value="Update Faq" />
    </div>
</form>


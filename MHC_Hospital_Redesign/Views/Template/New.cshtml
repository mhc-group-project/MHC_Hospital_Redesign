
@{
    ViewBag.Title = "Create";
}

<h2>Create Template</h2>
<form action="/Template/Create" method="POST">
    <div>
        <label>Template Name: </label> <input type="text" name="TemplateName" />
    </div>
    <div>
        <label>Template CSS: </label> <input type="text" name="TemplateStyle" placeholder="GetWellSoon.css"/>
    </div>
    <div>
        <input type="submit" value="Add Template" />
    </div>

</form>


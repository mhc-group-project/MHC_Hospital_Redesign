@model IEnumerable<MHC_Hospital_Redesign.Models.FeedbackCategoryDto>
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Feedback</h2>

<form action="/Feedback/Create" method="POST">
    <div>
        <label>User Name:</label> <input type="text" name="UserName" />
    </div>
    <div>
        <label>Feedback Content:</label> <textarea type="text" name="FeedbackContent"></textarea>
    </div>

    <div>
        <label>Feedback Category:</label>
        <select name="FeedbackCategoryID">
            @foreach (var feedbackCategory in Model)
            {
                <option value="@feedbackCategory.FeedbackCategoryID">@feedbackCategory.FeedbackCategoryName</option>

            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add Feedback" />

    </div>


</form>

